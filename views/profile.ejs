<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <title>Private Chat Application</title>

    <!-- <link href="http://fonts.googleapis.com/css?family=Open+Sans Condensed:300italic,300,700" rel="stylesheet" type="text/css"> -->
    <link href="/css/font.css?family=Open+Sans Condensed:300italic,300,700" rel="stylesheet" type="text/css">

    <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> load bootstrap css
     -->

     <link rel="stylesheet" href="/css/bootstrap.min.css"> <!-- load bootstrap css -->

    <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> load fontawesome -->
    <link rel="stylesheet" href="/css/font-awesome.min.css"> <!-- load fontawesome -->
    <!-- Path to Framework7 Library CSS-->
    <link rel="stylesheet" href="/css/framework7.css">
    <!-- Path to your custom app styles-->
    <link rel="stylesheet" href="/css/my-app.css">

</head>
<body>
  <div class="statusbar-overlay"></div>
    <div class="panel-overlay"></div>
    <!-- Left panel -->
    <div class="panel panel-left panel-cover">
      <div class="content-block-title"><span class="fa fa-asterisk"></span> Setting</div>

      <!-- <div class="content-block-title"><span class="fa fa-user"></span> Login</div> -->
      <div class="list-block">
        <ul>
            <% if (user.local.email) { %>
              <li class="swipeout transitioning swipeout-opened">
                <div class="item-content swipeout-content" style="-webkit-transform: translate3d(-106px, 0px, 0px);">
                <div class="item-content">
                <div class="item-media"><i class="icon icon-f7"></i></div>
                <div class="item-inner">
                  <div class="item-title">Local </div>
                  <!-- <i class="des"><%= user.local.email %></i> -->
                  <div class="item-text"><%= user.local.email %></div>
                </div>
                </div>
                </div>
                <div class="swipeout-actions">
                <div class="swipeout-actions-inner"><a href="/unlink/local" class="demo-actions">Unlink</a></div>
                </div>
                </li>
            <% } else { %>
                <li class="swipeout transitioning swipeout-opened">
                <div class="item-content swipeout-content" style="-webkit-transform: translate3d(-106px, 0px, 0px);">
                <div class="item-content">
                <div class="item-media"><i class="icon icon-f7"></i></div>
                <div class="item-inner">
                  <div class="item-title">Local</div>
                    <i class="des">not connected</i>
                </div>
                </div>
                </div>
                <div class="swipeout-actions">
                <div class="swipeout-actions-inner"><a href="/connect/local" class="demo-actions">Connect</a></div>
                </div>
                </li>

            <% } %>

          <li><a href="/auth/facebook" class="close-panel item-link">
              <div class="item-content">
                <div class="item-media"><i class="icon icon-fb"></i></div>
                <div class="item-inner">
                  <div class="item-title">Facebook</div>
                  <div class="item-text">Beatles</div>
                </div>
              </div></a></li>
          <li><a href="/auth/google" class="close-panel item-link">
              <div class="item-content">
                <div class="item-media"><i class="icon icon-google"></i></div>
                <div class="item-inner">
                  <div class="item-title">Google+</div>
                </div>
              </div></a></li>
          <li><a href="/auth/twitter" class="close-panel item-link">
              <div class="item-content">
                <div class="item-media"><i class="icon icon-twitter"></i></div>
                <div class="item-inner">
                  <div class="item-title">Twitter</div>
                </div>
              </div></a>
              </li>


                <li><a href="/logout" class="close-panel item-link">
                    <div class="item-content">
                    <div class="item-media"><i class="icon icon-f7"></i></div>
                    <div class="item-inner">
                    <div class="item-title">Logout</div>
                </div>
              </div></a></li>
        </ul>
      </div>
    </div>

    <!-- Views-->
    <div class="views">
      <!-- Your main view, should have "view-main" class-->
      <div class="view view-main">
        <!-- Top Navbar-->
        <div class="navbar">
          <div class="navbar-inner">
            <div class="left"><a href="#" class="open-panel link"><i class="icon icon-bars-blue"></i></a></div>
            <div class="center sliding" id="navbar-title">Private Chat App</div>

          </div>
        </div>


        <!-- Pages, because we need fixed-through navbar and toolbar, it has additional appropriate classes-->
        <div class="pages navbar-through toolbar-through">
          <!-- Page, data-page contains page name-->
            <div data-page="index" class="page">
            <!-- Scrollable page content-->
                <div class="page-content">
                    <div class="container">
                        <div class="jumbotron text-center">
                            <div class="content-block-title">People available to chat <span class="badge" >0</span></div>
                            <div data-page="pull-to-refresh" class="page page-on-center">
                            <div class="page-content pull-to-refresh-content">
                            <div class="pull-to-refresh-layer">
                            <div class="preloader"></div>
                            <div class="pull-to-refresh-arrow"></div>
                            </div>
                              <div class="say-hi">
                                <img src="<%= avatar %>" id="avatarImage" alt="Avatar" />
                                <p class="hi-text">Hi,</p>

                                <% if(user.local.name) { %>
                                    <h2 class="hi-name"><%= user.local.name %></h2>
                                <% } else if(user.facebook.name) { %>
                                    <h2 class="hi-name"><%= user.facebook.name %></h2>
                                <%} %>
                            <input type="hidden" id="idchat" value="<%= user.idchat %>">
                            </div>

                            <div class="content-block-title">People available to chat <span class="badge">0</span></div>
                            <div class="list-block media-list inset">
                            <ul>

                            </ul>
                            </div>
</div>




                      </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <!-- Path to Framework7 Library JS-->
    <script type="text/javascript" src="/js/framework7.js"></script>
    <!-- Path to your app js-->
    <script type="text/javascript" src="/js/my-app.js"></script>
    <!-- Path to your app js-->
    <!-- <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script> -->
    <script src="/js/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>

    <script type="text/javascript" src="/js/profile.js"></script>


</body>
</html>
